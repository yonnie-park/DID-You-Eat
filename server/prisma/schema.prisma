// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Token {
  token_id      Int         @id
  created_at    String
  comment       String?
  user          User?       @relation(fields: [public_key], references: [public_key])
  public_key    String
  collection    Collection? @relation(fields: [collection_id], references: [collection_id])
  collection_id String
}

model User {
  public_key  String  @id
  private_key String  @default("")
  address     String  @default("")
  e_mail      String  @default("")
  nickname    String  @default("unnamed")
  tokens      Token[]
}

model Owner {
  owner_id    String       @id
  owner_pw    String
  collections Collection[]
}

model Collection {
  collection_id String  @id
  img_url       String
  created_at    String
  location      String
  coordinate_x  Int
  coordinate_y  Int
  tokens        Token[]
  minted        Int     @default(0)
  shop_name     String
  owner         Owner?  @relation(fields: [owner_id], references: [owner_id])
  owner_id      String
}
